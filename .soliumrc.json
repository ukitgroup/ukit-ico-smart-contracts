{
  "extends": "solium:recommended",
  "plugins": [
    "security"
  ],
  "rules": {
    "security/no-block-members": 0,
    "security/no-low-level-calls": [
      "error",
      ["callcode", "delegatecall"]
    ],
    "emit": 0,
    "quotes": [
      "error",
      "double"
    ],
    "indentation": [
      "error",
      "tab"
    ]
  }
}
